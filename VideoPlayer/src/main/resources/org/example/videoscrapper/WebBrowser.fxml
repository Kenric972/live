<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.web.WebView?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.web.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.videoscrapper.Controllers.WebBrowser"
            stylesheets="@webbrowser.css"
            fx:id="rootPane">

    <children>
        <!-- VBox ensures toolbar stays at the top and WebView fills remaining space -->
        <VBox spacing="5" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

            <!-- Navigation toolbar -->
            <HBox spacing="5" alignment="CENTER_LEFT">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <Button onAction="#goBack" text="⏪"/>
                <Button onAction="#goForward" text="⏩"/>
                <Button onAction="#reloadPage" text="🔄"/>
                <TextField fx:id="urlField" promptText="Enter URL..." HBox.hgrow="ALWAYS"/>
                <Button onAction="#loadPage" text="Go"/>
            </HBox>

            <!-- WebView fills the remaining space -->
            <WebView fx:id="webView" VBox.vgrow="ALWAYS"/>
        </VBox>
    </children>
</AnchorPane>
