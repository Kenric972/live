<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.media.MediaView?>

<AnchorPane fx:id="rootPane"
            prefHeight="342.0" prefWidth="613.0"
            stylesheets="@VideoPlayer.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.videoscrapper.Controllers.VideoPlayer">

    <children>
        <!-- Make StackPane fill the AnchorPane -->
        <StackPane fx:id="videoContainer"
                   AnchorPane.topAnchor="0.0"
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0">

            <!-- Video output -->
            <MediaView fx:id="mediaView"
                       preserveRatio="true"
                       StackPane.alignment="CENTER" />

            <!-- Time label at bottom right -->
            <Label fx:id="playBackPosition"
                   StackPane.alignment="BOTTOM_RIGHT" />

            <!-- Progress slider at bottom center -->
            <Slider fx:id="progressSlider"
                    StackPane.alignment="BOTTOM_CENTER" />

            <!-- Video control buttons at bottom center -->
            <HBox fx:id="controlBar"
                  alignment="CENTER"
                  spacing="10"
                  StackPane.alignment="BOTTOM_CENTER">
                <Button fx:id="previous" onAction="#handlePrev" />
                <Button fx:id="rewind" onAction="#rewindVideo" />
                <Button fx:id="playButton" onAction="#playPauseVideo" />
                <Button fx:id="fastforward" onAction="#fastForwardVideo" />
                <Button fx:id="next" onAction="#handleNext" />
            </HBox>

        </StackPane>
    </children>
</AnchorPane>

